<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="378dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent">
        <Button
            android:id="@+id/addNewFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="폴더추가"
            android:textSize="14sp"
            android:textColor="@color/primary3"
            android:backgroundTint="@color/white"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/addNewFolder"
            android:layout_marginTop="12dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/foldertype"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="FolderType"
                    android:textSize="11sp"
                    android:textColor="@color/gray500"/>
                <TextView
                    android:id="@+id/folderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="FolderTitle"
                    android:textSize="14sp"
                    android:textColor="@color/gray900"/>

            </LinearLayout>

            
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>