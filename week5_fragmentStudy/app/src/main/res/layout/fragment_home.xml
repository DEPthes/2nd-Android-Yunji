<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/backgroundImg"
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:backgroundTint="@color/primary1"
            android:outlineProvider="none"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginTop="24dp">
                <ImageView
                    android:layout_width="74dp"
                    android:layout_height="29dp"
                    android:src="@drawable/bi_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"/>
                <ImageButton
                    android:id="@+id/friends"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_people_alt_24"
                    android:background="@color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/notification" />
                <ImageButton
                    android:id="@+id/notification"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_notifications_none_24"
                    android:background="@color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/userProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginTop="92dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="신입 개발자 \n김민지님"
                    android:textSize="18sp"
                    android:textColor="@color/gray800"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/cheerupMessage"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/cheerupMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collex에 입사한 걸 환영해요!"
                    android:textSize="14sp"
                    android:textColor="@color/gray800"
                    app:layout_constraintTop_toBottomOf="@id/userName"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:src="@drawable/profile_default"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/targetTitle"
            android:layout_width="328dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="194dp"
            app:cardCornerRadius="26dp"
            android:elevation="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/badge_illustration"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표 칭호"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="44dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나를 나타낼 수 있는 목표 칭호를 설정해 보세요!"
                android:textSize="12sp"
                android:layout_marginTop="54dp"
                android:layout_marginLeft="52dp"/>
            <Button
                android:layout_width="139dp"
                android:layout_height="40dp"
                android:text="목표 칭호 설정하기"
                android:background="@drawable/button_outline_blue"
                android:textColor="@color/primary3"
                android:layout_marginTop="86dp"
                android:layout_marginLeft="94.5dp"/>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/addNewFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineProvider="none"
            android:text="폴더추가"
            android:textSize="14sp"
            android:textColor="@color/primary3"
            android:backgroundTint="@color/transparent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/targetTitle"
            app:layout_constraintStart_toEndOf="@id/tab_ended"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="34dp"/>
        <Button
            android:id="@+id/tab_ing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineProvider="none"
            android:text="진행 중인 활동"
            android:textSize="14sp"
            android:textColor="@color/primary3"
            android:backgroundTint="@color/transparent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/targetTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tab_ended"
            android:layout_marginTop="32dp"/>
        <Button
            android:id="@+id/tab_ended"
            android:layout_width="wrap_content"
            android:outlineProvider="none"
            android:layout_height="wrap_content"
            android:text="마무리된 활동"
            android:textSize="14sp"
            android:textColor="@color/gray500"
            android:backgroundTint="@color/transparent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/targetTitle"
            app:layout_constraintStart_toEndOf="@+id/tab_ing"
            android:layout_marginTop="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 활동 폴더를 생성하지 않았어요. \n
활동 폴더를 생성하고 기록을 남겨보세요!"
            android:textAlignment="center"
            android:textColor="@color/gray500"
            app:layout_constraintTop_toBottomOf="@id/targetTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="146dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>